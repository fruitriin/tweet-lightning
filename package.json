{
  "name": "tweet-lightning",
  "version": "0.1.0",
  "author": "FruitRiin",
  "description": "Twitter Client for post",
  "license": "SEE LICENSE IN LICENSE.txt",
  "main": "./dist/electron/main.js",
  "scripts": {
    "build": "node .electron-vue/build.js && electron-builder",
    "build:dir": "node .electron-vue/build.js && electron-builder --dir",
    "build:clean": "cross-env BUILD_TARGET=clean node .electron-vue/build.js",
    "build:web": "cross-env BUILD_TARGET=web node .electron-vue/build.js",
    "dev": "node .electron-vue/dev-runner.js",
    "lint": "eslint --ext .js,.vue -f ./node_modules/eslint-friendly-formatter src",
    "lint:fix": "eslint --ext .js,.vue -f ./node_modules/eslint-friendly-formatter --fix src",
    "pack": "npm run pack:main && npm run pack:renderer",
    "pack:main": "cross-env NODE_ENV=production webpack --progress --colors --config .electron-vue/webpack.main.config.js",
    "pack:renderer": "cross-env NODE_ENV=production webpack --progress --colors --config .electron-vue/webpack.renderer.config.js"
  },
  "build": {
    "productName": "tweet-lightning",
    "appId": "space.riinswork.tweet-lightning",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/electron/**/*"
    ],
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "icon": "build/icons/icon.icns",
      "target": "pkg"
    },
    "extraResources": [
      "./licenses"
    ],
    "pkg": {
      "license": "license.txt"
    },
    "win": {
      "icon": "build/icons/icon.ico"
    },
    "nsis": {
      "unicode": true,
      "license": "LICENSE_SJIS.txt",
      "artifactName": "${productName}_Setup_${version}.${ext}"
    },
    "linux": {
      "icon": "build/icons"
    }
  },
  "dependencies": {
    "dayjs": "^1.10.4",
    "nucleus-nodejs": "^3.0.8",
    "twitter-lite": "^0.14.0",
    "vue": "^2.5.16",
    "vue-electron": "^1.0.6",
    "vue-material-design-icons": "^4.11.0",
    "vue-router": "^3.0.1"
  },
  "devDependencies": {
    "ajv": "7.0.4",
    "babel-core": "6.26.3",
    "babel-eslint": "8.2.6",
    "babel-loader": "7.1.5",
    "babel-plugin-transform-runtime": "6.23.0",
    "babel-preset-env": "1.7.0",
    "babel-preset-stage-0": "6.24.1",
    "babel-register": "6.26.0",
    "cfonts": "2.9.1",
    "chalk": "4.1.0",
    "copy-webpack-plugin": "4.6.0",
    "cross-env": "5.2.1",
    "css-loader": "0.28.11",
    "del": "3.0.0",
    "devtron": "1.4.0",
    "electron": "11.2.3",
    "electron-builder": "22.9.1",
    "electron-debug": "1.5.0",
    "electron-devtools-installer": "2.2.4",
    "electron-store": "6.0.1",
    "eslint": "7.19.0",
    "eslint-config-prettier": "7.2.0",
    "eslint-config-standard": "16.0.2",
    "eslint-friendly-formatter": "4.0.1",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.3.1",
    "eslint-plugin-promise": "4.3.1",
    "eslint-plugin-vue": "7.5.0",
    "file-loader": "1.1.11",
    "html-webpack-plugin": "3.2.0",
    "mini-css-extract-plugin": "0.12.0",
    "multispinner": "0.2.1",
    "node-loader": "0.6.0",
    "node-sass": "4.14.1",
    "oauth-electron-twitter": "fruitriin/oauth-electron-twitter",
    "prettier": "2.2.1",
    "sass-loader": "7.3.1",
    "style-loader": "0.23.1",
    "terser-webpack-plugin": "4.2.3",
    "url-loader": "1.1.2",
    "vue-auto-routing": "1.0.1",
    "vue-eslint-parser": "7.4.1",
    "vue-html-loader": "1.2.4",
    "vue-loader": "15.9.6",
    "vue-style-loader": "4.1.2",
    "vue-template-compiler": "2.6.12",
    "webpack": "4.46.0",
    "webpack-cli": "3.3.12",
    "webpack-dev-server": "3.11.2",
    "webpack-hot-middleware": "2.25.0",
    "webpack-merge": "4.2.2"
  }
}
