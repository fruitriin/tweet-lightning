{
  "name": "tweet-lightning",
  "version": "0.3.1",
  "author": "FruitRiin",
  "description": "Twitter Client for quick post",
  "license": "SEE LICENSE IN LICENSE.txt",
  "main": "./dist/electron/main.js",
  "scripts": {
    "build": "node .electron-vue/build.js && electron-builder",
    "build:dir": "node .electron-vue/build.js && electron-builder --dir",
    "build:clean": "cross-env BUILD_TARGET=clean node .electron-vue/build.js",
    "build:web": "cross-env BUILD_TARGET=web node .electron-vue/build.js",
    "dev": "node .electron-vue/dev-runner.js",
    "lint": "eslint --ext .js,.vue -f ./node_modules/eslint-friendly-formatter src",
    "lint:fix": "eslint --ext .js,.vue -f ./node_modules/eslint-friendly-formatter --fix src",
    "pack": "npm run pack:main && npm run pack:renderer",
    "pack:main": "cross-env NODE_ENV=production webpack --progress --colors --config .electron-vue/webpack.main.config.js",
    "pack:renderer": "cross-env NODE_ENV=production webpack --progress --colors --config .electron-vue/webpack.renderer.config.js"
  },
  "build": {
    "productName": "tweet-lightning",
    "appId": "space.riinswork.tweet-lightning",
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/electron/**/*"
    ],
    "publish": {
      "provider": "github",
      "owner": "fruitriin",
      "releaseType": "prerelease"
    },
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "icon": "build/icons/icon.icns",
      "target": "pkg"
    },
    "extraResources": [
      "./licenses"
    ],
    "pkg": {
      "license": "license.txt"
    },
    "win": {
      "icon": "build/icons/icon.ico"
    },
    "nsis": {
      "unicode": true,
      "license": "LICENSE_SJIS.txt",
      "artifactName": "${productName}_Setup_${version}.${ext}"
    },
    "linux": {
      "icon": "build/icons"
    }
  },
  "dependencies": {
    "dayjs": "^1.10.4",
    "nucleus-nodejs": "^3.0.8",
    "twitter-lite": "^1.0.0",
    "vue": "^2.5.16",
    "vue-electron": "^1.0.6",
    "vue-material-design-icons": "^4.11.0",
    "vue-router": "^3.0.1"
  },
  "devDependencies": {
    "@babel/core": "7.13.14",
    "@babel/eslint-parser": "7.13.14",
    "@babel/plugin-transform-runtime": "7.13.10",
    "@babel/preset-env": "7.13.12",
    "babel-loader": "8.2.2",
    "cfonts": "2.9.1",
    "chalk": "4.1.0",
    "copy-webpack-plugin": "7.0.0",
    "cross-env": "7.0.3",
    "css-loader": "5.2.0",
    "del": "6.0.0",
    "devtron": "1.4.0",
    "electron": "11.4.3",
    "electron-builder": "22.10.5",
    "electron-debug": "3.2.0",
    "electron-devtools-installer": "3.1.1",
    "electron-store": "8.0.0",
    "eslint": "7.23.0",
    "eslint-config-prettier": "8.2.0",
    "eslint-config-standard": "16.0.2",
    "eslint-friendly-formatter": "4.0.1",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-node": "11.1.0",
    "eslint-plugin-prettier": "3.4.0",
    "eslint-plugin-promise": "4.3.1",
    "eslint-plugin-vue": "7.9.0",
    "file-loader": "6.2.0",
    "html-webpack-plugin": "5.3.1",
    "mini-css-extract-plugin": "1.5.0",
    "multispinner": "0.2.1",
    "node-loader": "2.0.0",
    "node-machine-id": "1.1.12",
    "node-sass": "5.0.0",
    "oauth-electron-twitter": "fruitriin/oauth-electron-twitter",
    "prettier": "2.2.1",
    "ps-tree": "1.2.0",
    "sass-loader": "11.0.1",
    "style-loader": "2.0.0",
    "terser-webpack-plugin": "5.1.1",
    "url-loader": "4.1.1",
    "vue-auto-routing": "1.0.1",
    "vue-eslint-parser": "7.6.0",
    "vue-loader": "15.9.6",
    "vue-style-loader": "4.1.3",
    "vue-template-compiler": "2.6.12",
    "webpack": "5.34.0",
    "webpack-cli": "4.6.0",
    "webpack-dev-server": "3.11.2",
    "webpack-hot-middleware": "2.25.0",
    "webpack-merge": "5.7.3"
  },
  "resolutions": {
    "highlight.js": "^10.4.1",
    "lodash.merge": "^4.6.2"
  }
}
